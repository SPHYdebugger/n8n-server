FROM n8nio/n8n:latest

ENV N8N_BASIC_AUTH_ACTIVE=true
ENV N8N_BASIC_AUTH_USER=n8nadministrator
ENV N8N_BASIC_AUTH_PASSWORD=N8n123456
ENV N8N_ENCRYPTION_KEY=mySuperSecretKey123
ENV N8N_HOST=0.0.0.0
ENV N8N_PORT=5678
ENV NODE_ENV=production

EXPOSE 5678

ENTRYPOINT ["tini", "--"]
CMD ["n8n", "start"]
